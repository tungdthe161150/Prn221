@model WebAppYte.Models.DangNhap

@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var nd = ViewData["user"] as WebAppYte.Models.NguoiDung;
}
<style type="text/css">
    /* Reset CSS */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Body */
    body {
        font-family: Arial, sans-serif;
        background-color: #f6f6f6;
    }

    /* Container */
    .container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Form */
    .form-group {
        margin-bottom: 20px;
    }

        .form-group h4 {
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 5px;
        }

    .form-control {
        width: 100%;
        height: 40px;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 0 10px;
        font-size: 16px;
        transition: border-color 0.3s;
    }

    .form-control1 {
        width: 360px;
        height: 35px;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 0 10px;
        font-size: 16px;
        transition: border-color 0.3s;
    }

        .form-control1:focus {
            outline: none;
            border-color: #007bff;
        }

    /* Button */
    .btn {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        border: none;
        border-radius: 5px;
        background-color: #007bff;
        color: #fff;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    /* Message */
    .text-danger {
        color: red;
        font-size: 14px;
        margin-top: 5px;
    }

    /* Links */
    .links {
        margin-top: 20px;
        text-align: center;
    }

        .links a {
            color: #007bff;
            text-decoration: none;
            margin-left: 10px;
        }

            .links a:hover {
                text-decoration: underline;
            }

</style>

<br />


<div class="col-md-12">

    @using (Html.BeginForm("Dangnhap", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <center>
            <div>
                <div class="form-horizontal">

                    @{
                        if (nd == null)
                        {
                            <h2>  Đăng nhập tài khoản</h2>
                        }
                        else
                        {
                            <h3> Chúc mừng @nd.TaiKhoan đăng ký thành công. Đăng nhập ngay.</h3>
                        }
                    }

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <h4> @Html.LabelFor(model => model.TaiKhoan, htmlAttributes: new { @class = " " })</h4>
                        <div class="">
                            @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <h4>@Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "" })</h4>
                        <div class="">
                            @Html.PasswordFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control1" } })
                            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <h5 class="h5fail">@ViewBag.Fail</h5>

                    <div class="form-group">
                        <div>
                            <input type="submit" value="Đăng nhập" class="btn btn-success" />
                        </div>
                    </div>
                    <div>
                        Bạn chưa có tài khoản?  @Html.ActionLink("ĐĂNG KÝ NGAY", "Dangky")
                        <br />
                    </div>
                </div>

            </div>
        </center>
    }


</div>





